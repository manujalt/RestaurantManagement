@page
@model RestaurantManagementSystems.Views.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.OrderID" />
            <div class="form-group">
                <label asp-for="Order.PersonName" class="control-label"></label>
                <input asp-for="Order.PersonName" class="form-control" />
                <span asp-validation-for="Order.PersonName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.TotalAmount" class="control-label"></label>
                <input asp-for="Order.TotalAmount" class="form-control" />
                <span asp-validation-for="Order.TotalAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.OrderDate" class="control-label"></label>
                <input asp-for="Order.OrderDate" class="form-control" />
                <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.PaymentType" class="control-label"></label>
                <input asp-for="Order.PaymentType" class="form-control" />
                <span asp-validation-for="Order.PaymentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.PaymentMode" class="control-label"></label>
                <input asp-for="Order.PaymentMode" class="form-control" />
                <span asp-validation-for="Order.PaymentMode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Orderstatus" class="control-label"></label>
                <select asp-for="Order.Orderstatus" class="form-control"></select>
                <span asp-validation-for="Order.Orderstatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
